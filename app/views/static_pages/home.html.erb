<%= provide :title, t(".title") %>

<h1><%= t".header" %></h1>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
        <section class="user_info">
      <%= render "shared/user_info" %>
        </section>
        <section class="micropost_form">
          <%= render "shared/micropost_form" %>
        </section>
    </aside>
    <div class="col-md-8">
      <h3><% t = ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<p>
  This is the home page for the 
  <%= link_to "Ruby on Rails Tutorial", Settings.links.rails_tutorial.home_page %> 
  sample application.
</p>
<% end %>
