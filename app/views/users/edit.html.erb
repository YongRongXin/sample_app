<% provide :title, t(".title") %>
<% provide :button_text, t(".save_changes")%>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), Settings.signup.gravatar.email, target: "_blank" %>
    </div>
  </div>
</div>
